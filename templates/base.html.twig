<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Plant'Edia{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>

        <nav class="navigation">
            <div class="logo">
                <a href="{{path("app_accueil")}}"><img src="./uploads/logoPlantEdia.png" id="Logo"></a>
            </div>
           <ul class="menu">
                <li class="menu-items">
                {% if is_granted('ROLE_SUPER_ADMIN') %}
                    <a href="{{path("app_user")}}">{{'navbar.utilisateurs'|trans}}</a>
                {% endif %}
                </li>
                <li class="menu-items"><a href="{{path("app_accueil")}}">{{'navbar.accueil'|trans}}</a></li>
                <li class="menu-items"><a href="{{path("app_produit_index")}}">{{'navbar.produit'|trans}}</a></li>
                <li class="menu-items"><a href="{{path("app_panier")}}">{{'navbar.panier'|trans}}</a></li>
                <li class="menu-items"><a href="{{path("app_mon_compte")}}">{{'navbar.compte'|trans}}</a></li>
                <li class="menu-items"><a href="{{path("app_login")}}">{{'navbar.connexion'|trans}}</a></li>
           </ul>
        </nav>

        {% for type, messages in app.flashes %}
            {% for msg in messages %}
                <p>{{ type }} : {{ msg }}</p>
            {% endfor %}
        {% endfor %}

        {% block body %}{% endblock %}
    </body>
</html>
