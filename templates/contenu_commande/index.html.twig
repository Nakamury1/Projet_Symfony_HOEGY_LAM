{% extends 'base.html.twig' %}

{% block title %}Récapitulatif{% endblock %}

{% block body %}
    <div class="formulaire">
        <h1>Récapitulatif de ma commande</h1>

            <table class="table">
            <tr>
                <th>Nom du produit</th>
                <th>Prix</th>
                <th>Quantité</th>
                <th>Total</th>
            </tr>

            {% for item in items %}
                <tr>
                    <td>{{ item.produit.nom }}</td>
                    <td>{{ item.produit.prix }}</td>
                    <td>{{ item.quantite }}</td>
                    <td>{{ item.produit.prix * item.quantite }}</td>
                </tr>
            {% else %}
                <p>Votre panier est vide</p>
            {% endfor %}
        </table>

        {{ form_start(panierForm) }}
            {{ form_row(panierForm.etat) }}
            <button class="btn">{{ button_label|default('Save') }}</button>
        {{ form_end(panierForm) }}

        <div>
            <h3>Montant de la commande: {{ total }}€</h3>
            <h3>Date de la commande: {{ now|date('d/m/Y') }}</h3>
        </div>

        <button><a href="{{ path('app_mon_compte') }}" class="btn">retourner sur mon profil</a></button>
    </div>
{% endblock %}
